  \newsavebox{\clunit}                % OTU-box
  \newcounter{w}  \setcounter{w}{80}  % width of OTU-box
  \newcounter{h}  \setcounter{h}{15}  % height of OTU-box
  \newcommand{\otu}[3]{ 
    \savebox{\clunit}(\thew,\theh){\makebox[\thew pt]{\sf #2 \hfill #3}}
    \put(0,#1){\usebox{\clunit}}   
  }
 
%  \connect{x}{y}{dx}{-dy}{-dx}

  \newcounter{x}  \newcounter{y}      % (x,y)  current point
  \newcommand{\connect}[5]{
    \setcounter{x}{#1} \setcounter{y}{#2}
    \put(\thex,\they){\ifnum #3<0 \line(-1,0){-#3} \else \line(1,0){#3} \fi} 
    \addtocounter{x}{#3}
    \put(\thex,\they){\line(0,-1){#4}} 
    \addtocounter{y}{-#4}
    \put(\thex,\they){\ifnum #5<0 \line(1,0){-#5} \else \line(-1,0){#5} \fi}
  }

